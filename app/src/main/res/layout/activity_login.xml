            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N"
            android:textColor="#5d3e20"
            android:textStyle="bold"
            android:textSize="20pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H"
            android:textColor="#5d3e20"
            android:textStyle="bold"
            android:textSize="20pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="U"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20pt"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event"
            android:textColor="#5d3e20"
            android:textStyle="bold"
            android:textSize="20pt"/>
