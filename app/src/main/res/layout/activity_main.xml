<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_events"
        android:id="@+id/findEventBtn"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:layout_marginBottom="65dp"
        android:layout_above="@+id/myPageBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_events"
        android:id="@+id/addEventBtn"
        android:layout_alignTop="@+id/findEventBtn"
        android:layout_toRightOf="@+id/myPageBtn"
        android:layout_toEndOf="@+id/myPageBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_page"
        android:id="@+id/myPageBtn"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/findEventBtn"
        android:layout_toEndOf="@+id/findEventBtn" />

</RelativeLayout>