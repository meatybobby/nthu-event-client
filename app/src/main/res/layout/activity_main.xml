<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listColor2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background_panda_transparent"
        android:id="@+id/imageView" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_events"
            android:id="@+id/findEventBtn"
            android:layout_marginBottom="5dp"
            android:layout_gravity="end"
            style="@style/com_facebook_loginview_silver_style"
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_events"
            android:id="@+id/addEventBtn"
            android:layout_marginBottom="5dp"
            android:layout_gravity="end"
            style="@style/com_facebook_loginview_silver_style"
           />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_page"
            android:id="@+id/myPageBtn"
            android:layout_marginBottom="5dp"
            android:layout_gravity="end"
            style="@style/com_facebook_loginview_silver_style"
        />

    </LinearLayout>


</RelativeLayout>